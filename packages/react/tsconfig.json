{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react-jsx",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "skipLibCheck": false,
        "strict": true,
        "types": ["node", "vitest/globals", "react", "react-dom"]
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx"
    ]
}
