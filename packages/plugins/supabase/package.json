    "peerDependencies": {
        "@onboardjs/core": ">=1.0.0-rc.3",
        "@supabase/supabase-js": ">=2.87.1"
    },
    "devDependencies": {
        "@onboardjs/core": "workspace:*",
        "@supabase/supabase-js": "^2.87.1",
        "@types/node": "^24.3.0",
