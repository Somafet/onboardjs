{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "rootDir": ".",
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "skipLibCheck": false,
        "strict": true,
        "types": ["react", "react-dom"],
        "declarationMap": true,
        "emitDeclarationOnly": true
    },
    "include": ["src", "vitest.config.ts"],
    "exclude": ["node_modules", "dist"]
}
